{
  "name": "gold_extension_background",
  "version": "0.5.0",
  "scripts": {
    "build": "webpack --env app_mode=real --mode=production --config webpack.build.config.js",
    "build::watch": "webpack --watch --progress --env app_mode=real --mode=production --config webpack.build.config.js",
    "start": "webpack serve --env app_mode=axios --mode=development --config webpack.serve.config.js",
    "test": "jest --config=jest.config.js --collectCoverage --no-cache",
    "test:watch": "jest --config=jest.config.js --collectCoverage --watch --no-cache"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.237",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.14.195",
    "@types/node": "^16.18.28",
    "jest": "^29.5.0",
    "jest-mock-extended": "^3.0.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.3",
    "typescript": "^4.9.5",
    "webpack-cli": "^5.1.1",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
